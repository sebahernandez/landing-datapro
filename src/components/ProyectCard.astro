---
const { title, img, description, url } = Astro.props;
---

<div class="lg:w-1/3 sm:w-1/2 p-4">
  <div class="flex relative h-300">
    <img
      alt="gallery"
      class="absolute inset-0 w-full h-full object-cover object-top shadow-xl"
      src={img.src}
    />
    <div
      class="h-300 transition-opacity duration-300 ease-in-out px-8 py-24 relative z-10 w-full  bg-white opacity-0 hover:opacity-100 rounded-sm shadow-2xl"
    >
      <h3 class="title-font text-lg font-bold text-gray-900 mb-3">{title}</h3>
      <p class="leading-relaxed">{description}</p>
      <div class="py-2">
        <a href={url} target="_blank" class="font-bold text-blue-600"> ðŸ”— Visitar sitio</a>
      </div>
    </div>
  </div>
</div>
